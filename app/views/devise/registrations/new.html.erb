<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h2>Pro Account</h2>
          <p>Sign up for a Pro Account for only $10/month and get access to the exclusive community and contact info of all our members.</p>
        <% else %>
          <h2>Basic Account</h2>
          <p>Sign up for a Basic Account and get access to job postings and our exclusive community.</p>
        <% end %>
      </div>
      <br>
      
      
      <div class="well">
        <h1 class="text-center sign-up-form">Sign Up</h1>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
